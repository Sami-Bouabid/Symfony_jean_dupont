{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<h1 class="my-3 display-5 text-center">Connexion</h1>


<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto shadow p-4 bg-white">
            <form method="post">
                {# Warning message #}
                {% for message in app.flashes("warning") %}
                    <div class="alert alert-warning text-center" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {# Success message #}
                {% for message in app.flashes("success") %}
                    <div class="alert alert-success text-center" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {# Error message #}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                
                <div class="mb-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div> 

                <div class="mb-3">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                </div>
                
                <div class="mb-3">
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}    
                     <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div> 
                
               </div>

               <div class="mb-3">
                <button formnovalidate class="btn btn-primary" type="submit">
                    Me connecter
                </button>
               </div>
            </form>

                <div class="d-flex justify-content-center align-content-center">
                    <a href="{{ path("visitor.forgot_password.request") }}">Mot de passe oubli√© ?</a>
                </div>
        </div>
    </div>
</div>


{% endblock %}
